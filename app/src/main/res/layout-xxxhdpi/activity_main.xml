<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/trueBlack"
    android:padding="10dp"
    tools:context=".presentation.activityUI.MainActivity">

        <EditText
            android:id="@+id/text_view_city_search"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@drawable/background_for_edittext_search"
            android:hint="Search your city "
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textColorHint="@color/white"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/search_button"
            app:layout_constraintEnd_toStartOf="@id/search_button"/>

        <TextView
            android:drawableStart="@drawable/ic_search_black_24dp"
            android:id="@+id/search_button"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@drawable/background_for_search_button" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/background_for_city_items"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/search_button">

        <FrameLayout
            android:id="@+id/frame_for_monthly_view"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/today"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/click_state"
                    android:gravity="center"
                    android:hint="Today"
                    android:clickable="true"
                    android:textColorHint="@color/white"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tomorrow"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/click_state"
                    android:gravity="center"
                    android:hint="Tomorrow"
                    android:clickable="true"
                    android:textColorHint="@color/white"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/weekly"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/click_state"
                    android:gravity="center"
                    android:hint="Weekly"
                    android:clickable="true"
                    android:textColorHint="@color/white"
                    android:textSize="16sp" />

            </LinearLayout>

        </FrameLayout>

        <ImageView
                android:id="@+id/weather_icon"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/frame_for_monthly_view"
                app:layout_constraintBottom_toTopOf="@id/linear_for_hours_view"
                android:layout_marginTop="10dp"
                android:layout_marginStart="12dp"
                android:layout_width="80dp"
                android:layout_height="80dp" />

        <TextView
            android:id="@+id/city_name_layout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/weather_icon"
            app:layout_constraintStart_toEndOf="@id/weather_icon"
            android:hint="Tbilisi "
            android:fontFamily="casual"
            android:textColor="@color/white"
            android:textSize="28sp"
            android:textStyle="bold|italic"
            android:textColorHint="@color/white"
            android:layout_marginStart="12dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

        <TextView
                android:id="@+id/date"
                app:layout_constraintStart_toStartOf="@id/city_name_layout"
                app:layout_constraintBottom_toBottomOf="@id/weather_icon"
                android:hint="Tuesday, 04 june, 2019"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/weather_temperature"
            android:hint="30 C\u00B0 "
            android:textSize="28sp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:textStyle="bold|italic"
            android:textColorHint="@color/white"
            app:layout_constraintStart_toStartOf="@id/weather_icon"
            app:layout_constraintTop_toBottomOf="@id/weather_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/weather_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Sunny"
            android:textSize="18sp"
            android:textColorHint="@color/white"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/weather_temperature"
            app:layout_constraintStart_toStartOf="@id/city_name_layout"
            app:layout_constraintTop_toTopOf="@id/weather_temperature" />

        <LinearLayout
            android:clickable="true"
            android:id="@+id/linear_for_hours_view"
            android:layout_width="200dp"
            android:layout_height="320dp"
            android:background="@drawable/hours_corner_background"
            android:gravity="center|clip_vertical"
            android:orientation="vertical"
            android:paddingStart="40dp"
            android:layout_marginTop="20dp"
            android:paddingEnd="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="7dp"
                android:text="12:00"
                android:textColor="@color/white"
                android:textSize="23sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="7dp"
                android:text="15:00"
                android:textColor="@color/white"
                android:textSize="23sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="7dp"
                android:text="18:00"
                android:textColor="@color/white"
                android:textSize="23sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="7dp"
                android:text="21:00"
                android:textColor="@color/white"
                android:textSize="23sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="7dp"
                android:text="00:00"
                android:textColor="@color/white"
                android:textSize="23sp" />


        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/linear_for_hours_view"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="160dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            
            <TextView
                android:id="@+id/precipitation"
                android:hint="80%"
                android:textColor="@color/orange"
                android:textColorHint="@color/orange"
                android:textSize="22sp"
                android:layout_marginStart="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:hint="Precipitation"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:layout_marginStart="12dp"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/humidity"
                android:hint="76%"
                android:textColor="@color/orange"
                android:textColorHint="@color/orange"
                android:textSize="22sp"
                android:layout_marginTop="15dp"
                android:layout_marginStart="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:hint="Humidity"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:layout_marginStart="12dp"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/wind"
                android:hint="21 km/h"
                android:textColor="@color/orange"
                android:textColorHint="@color/orange"
                android:textSize="22sp"
                android:layout_marginTop="15dp"
                android:layout_marginStart="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:hint="Wind"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:layout_marginStart="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>